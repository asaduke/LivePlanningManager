<%= form_with model: @profile, local: true do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <div class="pt-2 form-group">
    <div class="pl-4">
      <i class="py-3 fa-sm fa-solid fa-user"></i>
      <%= f.label :name %>
    </div>

    <div class="text-xl px-4 pt-1">
      <%= f.text_field :name, class: "mb-2 py-2 w-full rounded-md border-gray-300 focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" %>
    </div>
  </div>

  <div class="pt-2 form-group">
    <div class="pl-4">
      <i class="fa-solid fa-image"></i>
      <%= f.label :avatar %>
    </div>

    <div class="pl-4 pt-1">
      <%= f.file_field :avatar %>
      <%= f.hidden_field :avatar_cache %>
    </div>

    <div class="pl-4 pt-2">
      <%= image_tag @profile.avatar.url,
                    style: "width: 70px; height: 70px; object-fit: cover; border-radius: 50%;",
                    class: "pt-1" %>
    </div>
  </div>

  <div class="pt-2 flex flex-col justify-center items-center">
    <%= f.submit '更新', class: "mb-2 btn bg-green-300 text-green-700 text-base font-light mt-2 hover:ring-2 ring-green-300 hover:bg-green-400" %>
    <%=link_to '編集しないで戻る', other_path(current_user), class: "mt-1 mb-2 text-gray-400 hover:text-gray-500 underline" %>
  </div>
<% end %>
