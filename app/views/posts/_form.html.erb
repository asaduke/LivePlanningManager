<div class="xl:flex xl:justify-between">
  <!-- ライブ情報 -->
  <div class="flex flex-col items-center">
    <%= form_with model: @live, url: new_post_path, local: true, class: "text-gray-600" do |f| %>
      <div class="flex justify-center">
        <div class="text-gray-600 px-4 text-xl mt-4 mb-1" style="word-break: break-all;">
          <%= @live.title %>
        </div>
      </div>

      <% if @live.place.present? %>
        <div class="ml-1 xl:mx-8 mb-1" style="word-break: break-all;">
          <div class="text-teal-600">
            <i class="fa-sm fa-solid fa-map-location-dot"></i>
            <%= f.label :place, t('activerecord.attributes.live.place'), class: "text-sm" %><br>
          </div>

          <div class="text-lg text-gray-600">
            <%= @live.place %>
          </div>
        </div>
      <% end %>

      <div class="space-x-12 flex flex-row mb-1">
        <% if @live.date.present? %>
          <div class="font-light ml-1 xl:ml-8 mb-1">
            <div class="text-teal-600">
              <i class="fa-sm fa-regular fa-calendar"></i>
              <%= f.label :date, t('activerecord.attributes.live.date'), class: "text-sm" %><br>
            </div>

            <div class="text-lg text-gray-600">
              <%= @live.date.strftime('%Y年%m月%d日') %>
            </div>
          </div>
        <% end %>

        <% if @live.open_time.present? %>
          <div class="font-light xl:ml-8">
            <div class="text-teal-600">
              <i class="fa-sm fa-regular fa-clock"></i>
              <%= f.label :open_time, class: "text-sm" %>
            </div>

            <div class="text-lg text-gray-600">
              <%= @live.open_time.strftime('%H時%M分') %>
            </div>
          </div>
        <% end %>

        <% if @live.start_time.present? %>
          <div class="font-light ml-8">
            <div class="text-teal-600">
              <i class="fa-sm fa-regular fa-clock"></i>
              <%= f.label :start_time, class: "text-sm" %>
            </div>

            <div class="text-lg text-gray-600">
              <%= @live.start_time.strftime('%H時%M分') %>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>

    <!-- 投稿フォーム(xlになったら表示) -->
    <div class="hidden xl:block xl:float-left xl:ml-8">
      <%= form_with model: @post, url: new_post_path, local: true, class: "w-96" do |f| %>
        <div class="text-amber-500">
          <%= f.label :comment %>
        </div>

        <%= f.text_area :comment, class: "text-gray-600 mb-1 py-1 w-full rounded-md border-gray-300 focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" %>
      <% end %>
    </div>
  </div>

  <!-- アイテム情報 -->
  <div class="mt-2 mb-6 xl:mr-2 xl:mt-6 flex flex-col items-center">
    <% @packing_items.each do |packing_item| %>
      <%= form_with model: packing_item, url: new_post_path, local: true do |f| %>
        <div class="ring-2 ring-sky-100 bg-sky-50 w-96 mx-5 py-2">
          <div class="text-gray-600 ml-4 text-base">
            <%= packing_item.name %>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>

<!-- 投稿フォーム(xlになったら非表示) -->
<div class="xl:hidden flex justify-center mb-2">
  <%= form_with model: @post, url: new_post_path, local: true, class: "w-96" do |f| %>
    <div class="text-amber-500">
      <%= f.label :comment %>
    </div>

    <%= f.text_area :comment, class: "text-gray-600 mb-1 py-1 w-full rounded-md border-gray-300 focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" %>

    <div class="mt-2">
      <%= f.label :is_anonymous, class: "text-amber-500" %>
      <div class="flex items-center">
        <%= f.radio_button :is_anonymous, true, class: "mr-1" %>
        <span class="text-gray-600">はい</span>
      </div>
      <div class="flex items-center">
        <%= f.radio_button :is_anonymous, false, checked: true, class: "mr-1" %>
        <span class="text-gray-600">いいえ</span>
      </div>
    </div>

    <div class="mt-4 flex flex-col justify-center items-center">
      <%= f.submit "投稿", class: "mb-2 btn bg-green-300 text-green-700 text-sm font-light hover:ring-2 ring-green-300 hover:bg-green-400" %>
      <%=link_to "破棄して戻る", lives_path, class: "mb-2 text-gray-400 hover:text-gray-500 underline" %>
    </div>
  <% end %>
</div>
