<div class="bg-sky-50 mx-auto px-4 py-16 min-h-screen">
  <div class="flex justify-center">
    <div class="shadow-lg ring-2 ring-teal-100 bg-white rounded-md w-full md:w-5/6 lg:w-7/12 xl:w-[60rem] pb-6">
      <div class="xl:flex xl:flex-row">
        <!-- ライブ登録詳細 -->
        <div class="xl:w-3/5">
          <%= render 'posts/show_form', { post: @post } %>
        </div>

        <!-- アイテム情報 -->
        <div class="form-group xl:w-3/5">
          <div class="mt-2 mb-6 xl:mr-2 xl:mt-6 flex flex-col items-center">
            <% @packing_items.each do |packing_item| %>
              <%= form_with model: packing_item, url: life_posts_path, local: true do |f| %>
                <div class="ring-2 ring-sky-100 bg-sky-50 w-96 mx-5 py-2">
                  <div class="text-gray-600 ml-4 text-base">
                    <%= packing_item.name %>
                  </div>
                </div>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
