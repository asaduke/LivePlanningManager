<div class="bg-sky-50 mx-auto px-4 py-2 min-h-screen">
  <div class="pb-2">
    <%= link_to "みんなのリストへ戻る", posts_path, class: "btn bg-amber-50 text-amber-500 text-sm font-light hover:ring-2 ring-amber-100 hover:bg-amber-200" %>
  </div>

  <div class="flex justify-center">
    <div class="shadow-lg ring-2 ring-amber-100 bg-white rounded-md w-full md:w-5/6 lg:w-7/12 xl:w-[60rem] pb-6">
      <div class="xl:flex xl:flex-row">
        <div class="xl:w-3/5">
          <!-- ドロップダウンメニュー(xlになったら非表示) -->
          <div class="xl:hidden float-right mt-3">
            <% if @post.user == current_user %>
              <%= render 'dropdown_menu' %>
            <% end %>
          </div>

          <!-- ライブ登録詳細 -->
          <%= render 'posts/show_form', { post: @post } %>
        </div>

        <div class="form-group xl:w-3/5">
          <!-- ドロップダウンメニュー(xlになったら表示) -->
          <div class="hidden xl:block float-right mt-3">
            <% if @post.user == current_user %>
              <%= render 'dropdown_menu' %>
            <% end %>
          </div>

          <!-- アイテム情報 -->
          <div class="mt-2 mb-2 xl:mr-2 xl:mt-6 flex flex-col items-center">
            <% @packing_items.each do |packing_item| %>
              <%= form_with model: packing_item, url: life_posts_path, local: true do |f| %>
                <div class="ring-2 ring-sky-100 bg-sky-50 w-80 xl:w-[26rem] py-2">
                  <div class="text-gray-600 ml-4 text-base">
                    <%= packing_item.name %>
                  </div>
                </div>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
