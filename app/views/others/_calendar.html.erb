<div class="pt-4 flex justify-center">
  <div class="shadow-lg ring-2 ring-amber-50 bg-white rounded-md mx-2 w-[25rem]">
    <h1 class="font-light text-amber-500 text-xl mt-4 flex justify-center">今月の予定</h1>

    <div class="mb-4 flex justify-center">
      <%= month_calendar(attribute: :departure_time, events: @lives) do |date, lives| %>
        <div class="mr-1">
          <%= date.day %>
        </div>

        <% if lives.present? %>
          <% lives.each do |live| %>
            <%= link_to life_path(live) do %>
              <i class="text-teal-500 fa-solid fa-wand-magic-sparkles"></i>
            <% end %>
          <% end %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
