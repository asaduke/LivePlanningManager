<div class="bg-gray-50 mx-auto px-4 py-6 min-h-screen">
  <div class="flex justify-center">
    <div class="shadow-lg ring-2 ring-green-200 bg-green-50 rounded-md w-full md:w-5/6 lg:w-3/5 flex fustify-center items-center flex-col">
      <h1 class="font-light text-green-600 text-3xl mt-8 text-center">新規登録</h1>

      <%= form_with model: @user, local: true, class: "space-y-2 mt-8 mb-16 mx-16 w-3/4 md:w-3/5 lg:w-3/5" do |f| %>
        <%= render 'shared/error_messages', object: f.object %>

        <%= f.fields_for :profile do |pf| %>
          <div class="form-group">
            <div class="flex flex-row">
              <%= pf.label :name, class: "text-green-600" %>
              <div class="ml-1 text-red-600">*</div><br>
            </div>

            <%= pf.text_field :name, class: "mt-1 py-2 w-full rounded-md border-gray-300 focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" %>
          </div>
        <% end %>

        <div class="form-group">
          <div class="flex flex-row">
            <%= f.label :email, class: "text-green-600" %>
            <div class="ml-1 text-red-600">*</div><br>
          </div>

          <%= f.email_field :email, class: "mt-1 py-2 w-full rounded-md border-gray-300 focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" %>
        </div>

        <div class="form-group">
          <div class="flex flex-row">
            <%= f.label :password, class: "text-green-600" %>
            <div class="ml-1 text-red-600">*</div><br>
          </div>

          <%= f.password_field :password, class: "mt-1 py-2 w-full rounded-md border-gray-300 focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" %>
        </div>

        <div class="form-group">
          <div class="flex flex-row">
            <%= f.label :password_confirmation, class: "text-green-600" %>
            <div class="ml-1 text-red-600">*</div><br>
          </div>

          <%= f.password_field :password_confirmation, class: "mt-1 py-2 w-full rounded-md border-gray-300 focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" %>
        </div>

        <div class="flex justify-center items-center">
          <%= f.submit '登録', class: "btn bg-green-300 text-green-700 text-sm font-light mt-12 hover:ring-2 ring-green-300 hover:bg-green-400" %>
        </div>

        <div class="text-center">
          <%= link_to 'ログインページへ', login_path, class: "text-indigo-400 hover:text-indigo-600" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
