<div class="bg-indigo-50 mx-auto px-4 py-16 min-h-screen">
  <div class="flex justify-center">
    <div class="shadow-lg bg-blue-50 rounded-md md:w-1/2 lg:w-3/5 flex fustify-center items-center flex-col">
      <h1 class="font-light text-gray-600 text-3xl mt-8 text-center">ログイン</h1>

      <%= form_with url: login_path, local: true, class: "space-y-2 mt-8 mb-16 mx-24 md:w-3/5 lg:w-2/5" do |f| %>
        <div class="form-group">
          <%= f.label :email %><br>
          <%= f.text_field :email, class: "mt-1 p-2 w-full rounded-md border-gray-300 focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" %>
        </div>

        <div class="form-group">
          <%= f.label :password %><br>
          <%= f.password_field :password, class: "mt-1 p-2 w-full rounded-md border-gray-300 focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" %>
        </div>

        <div class="flex justify-center items-center">
          <%= f.submit 'ログイン', class: "btn bg-green-400 text-2xl font-light text-gray-600 mt-12 hover:ring-2 ring-green-400 hover:bg-green-500" %>
        </div>

        <div class="text-center">
          <%= link_to '新規登録はこちら', new_user_path, class: "text-indigo-400 hover:text-indigo-600" %><br>
          <%= link_to 'パスワードをお忘れの方はこちら', new_password_reset_path, class: "text-indigo-400 hover:text-indigo-600" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
