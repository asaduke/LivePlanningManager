<div class="my-4 mx-4 xl:mr-6 xl:mt-7">
  <p class="text-md text-indigo-800">持ち物リスト</p>

  <%= form_with model: [@live, @packing_item], url: life_packing_items_path(live, packing_item), id: 'new_packing_item', class: "space-y-2 w-full", local: false do |f| %>
    <div class="flex flex-row">
      <%= f.text_field :name, class: "mt-2 mr-2 pb-2 w-full rounded-md border-gray-300 focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" %>
      <%= f.submit '追加', class: "mt-2 btn bg-green-300 text-green-700 text-sm font-light hover:ring-2 ring-green-300 hover:bg-green-400" %>
    </div>

    <%= render 'shared/error_messages', object: f.object %>
  <% end %>
</div>
