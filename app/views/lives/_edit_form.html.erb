<%= turbo_frame_tag live do %>
  <%= form_with model: @live, local: true do |f| %>
    <%= render 'shared/error_messages', object: f.object %>

    <div class="text-2xl ml-6 mr-16 mt-6 mb-4 xl:m-6">
      <%= f.text_field :title, class: "text-gray-600 w-full rounded-md border-gray-300 focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" %>
    </div>

    <div class="m-6">
      <div class="text-teal-600">
        <%= f.label :place, t('activerecord.attributes.live.place') %><br>
      </div>

      <div class="text-xl text-gray-600">
        <%= f.text_field :place, class: "mb-2 py-2 w-full rounded-md border-gray-300 focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" %>
      </div>

      <div class="my-2">
        <div class="text-teal-600">
          <%= f.label :date, t('activerecord.attributes.live.date') %><br>
        </div>

        <div class="text-xl text-gray-600">
          <%= f.date_field :date, class: "mb-2 py-2 w-full sm:w-auto rounded-md border-gray-300 focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" %>
        </div>
      </div>

      <div class="flex flex-row mb-4">
        <div class="form-group flex-auto w-full">
          <div class="text-teal-600">
            <%= f.label :open_time %>
          </div>

          <div class="text-xl text-gray-600">
            <%= f.time_field :open_time, class: "w-full sm:w-auto rounded-md border-gray-300 focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" %>
          </div>
        </div>

        <div class="form-group flex-auto w-full">
          <div class="text-teal-600">
            <%= f.label :start_time %>
          </div>

          <div class="text-xl text-gray-600">
            <%= f.time_field :start_time, class: "w-full sm:w-auto rounded-md border-gray-300 focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" %>
          </div>
        </div>
      </div>

      <div class="form-group flex-auto w-full">
        <div class="mb-2">
          <div class="text-amber-600">
            <%= f.label :departure_time %>
          </div>

          <div class="text-xl text-gray-600">
            <%= f.datetime_field :departure_time, class: "w-full sm:w-auto rounded-md border-gray-300 focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" %>
          </div>
        </div>
      </div>

      <div class="flex flex-col justify-center items-center">
        <%= f.submit '更新', class: "btn bg-amber-300 text-amber-700 text-sm font-light mt-2 hover:ring-2 ring-amber-300 hover:bg-amber-400" %>
        <%=link_to '編集しないで戻る', @live, class: "mt-2 text-gray-400 hover:text-gray-500 underline" %>
      </div>
    </div>
  <% end %>
<% end %>
