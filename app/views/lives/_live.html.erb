<%= link_to life_path(live), class: "shadow-lg bg-teal-50 rounded-md mb-8 mx-4 w-96" do %>
  <%= form_with url: lives_path, local: true, class: "text-gray-600" do |f| %>
    <div class="text-2xl flex justify-center my-2 mx-8" style="word-break: break-all;">
      <%= live.title %>
    </div>

    <div class="mx-8" style="word-break: break-all;">
      <%= f.label :place, t('activerecord.attributes.live.place') %><br>
      <div class="text-2xl">
        <%= live.place %>
      </div>
    </div>

    <div class="font-light ml-8 my-2">
      <%= f.label :date, t('activerecord.attributes.live.date') %><br>
      <div class="text-2xl">
        <%= live.date.strftime('%Y年%m月%d日') if live.date.present? %>
      </div>
    </div>
  <% end %>
<% end %>
