<div class="bg-sky-50 mx-auto px-4 py-2 min-h-screen">
  <div class="pb-2">
    <%= link_to "リスト一覧へ戻る", lives_path, class: "btn bg-teal-50 text-teal-500 text-sm font-light hover:ring-2 ring-teal-100 hover:bg-teal-200" %>
  </div>

  <div class="flex justify-center">
    <div class="shadow-lg ring-2 ring-teal-100 bg-white rounded-md w-full md:w-5/6 lg:w-7/12 xl:w-[60rem] pb-6">
      <div class="xl:flex xl:flex-row">
        <div class="xl:w-3/5">
          <!-- ドロップダウンメニュー(xlになったら非表示) -->
          <% if @live.post.present? %>
            <div class="xl:hidden float-right">
              <%= render 'lives/dropdown_menu' %>
            </div>
          <% else %>
            <div class="xl:hidden float-right mt-3">
              <%= render 'lives/dropdown_menu' %>
            </div>
          <% end %>

          <!-- ライブ登録詳細 -->
          <%= render 'lives/show_form', { live: @live } %>
        </div>

        <div class="form-group xl:w-3/5">
          <!-- ドロップダウンメニュー(xlになったら表示) -->
          <div class="hidden xl:block float-right mt-3">
            <%= render 'lives/dropdown_menu' %>
          </div>

          <% if @live.post.present? %>
            <!-- アイテム情報 -->
            <div class="mt-6 xl:mt-12">
              <% @packing_items.each do |packing_item| %>
                <%= render 'packing_items/packing_item', { packing_item: packing_item } %>
              <% end %>
            </div>
          <% else %>
            <!-- 持ち物リストフォーム -->
            <%= render 'packing_items/form', { packing_item: @packing_item, live: @live } %>

            <!-- 持ち物リスト -->
            <% @packing_items.each do |packing_item| %>
              <%= render 'packing_items/packing_item', { packing_item: packing_item } %>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
