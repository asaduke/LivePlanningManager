<div class="bg-sky-50 mx-auto px-4 py-16 min-h-screen">
  <div class="flex justify-center">
    <div class="shadow-lg ring-2 ring-teal-100 bg-teal-50 rounded-md w-full md:w-5/6 lg:w-7/12 pb-6">
      <div class="xl:flex xl:flex-row">
        <div class="lg:w-3/5">
          <!-- ライブ登録詳細 -->
          <%= render 'lives/show_form', { live: @live } %>
        </div>

        <div class="form-group xl:w-3/5">
          <!-- 画面が大きい時は表示、小さい時は非表示 -->
          <div class="hidden xl:block xl:float-right xl:text-red-400 xl:mt-2 xl:mr-3">
            <%= link_to "削除", life_path(@live), data: { turbo_method: :delete, turbo_confirm: "本当に削除しますか？" } %>
          </div>

          <!-- 持ち物リストフォーム -->
          <%= render 'packing_items/form', { packing_item: @packing_item, live: @live } %>

          <!-- 持ち物リスト -->
          <% @packing_items.each do |packing_item| %>
            <%= render 'packing_items/packing_item', { packing_item: packing_item } %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
